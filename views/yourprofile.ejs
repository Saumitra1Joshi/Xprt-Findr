    <!-- My CSS File-->
    <link rel="stylesheet" type ="css" href="css/home.css">

    <title>Xprt Findr</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="brandname"><a class="navbar-brand" href="/">Xprt Findr</a></div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/yourprofile">Your Profile<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/teach">Teach</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/learn">Learn</a>
            </li>
          </ul>
        </div>
      </nav>

      <h1 class="quesbanner">Questions Answered - 3</h1>
      <div class="mid"></div>
      <div class="list-group">
        <% for(let i=0;i<questaught.length;i++){ %>
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%= questaught[i].queshead %></h5>
                  <small class="text-muted">2 days ago</small>
                </div>
                <p class="mb-1"><%= questaught[i].quesbod %></p>
                <small class="text-muted"><%= questaught[i].username %></small>
              </a>  
        <% } %>
      </div>


      <h1 class="quesbanner">Questions Asked - 1</h1>
      <div class="mid"></div>
      <div class="list-group">
        <% for(let i=0;i<queslearnt.length;i++){ %>
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1"><%=  queslearnt[i].queshead %></h5>
                  <small class="text-muted">1 days ago</small>
                </div>
                <p class="mb-1"><%=  queslearnt[i].quesbod %></p>
                <small class="text-muted"><%= queslearnt[i].username %></small>
            </a>
        <% } %>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
